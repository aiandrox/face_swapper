<p style="color: green"><%= notice %></p>

<% content_for :title, "Personal photos" %>

<h1>Personal photos</h1>

<div id="personal_photos">
  <% @personal_photos.each do |personal_photo| %>
    <p>
      <%= link_to personal_photo.name, personal_photo %>
      <% if personal_photo.icon.attached? %>
        <%= image_tag personal_photo.icon.variant(resize:'50x50').processed %>
      <% end %>
    </p>
  <% end %>
</div>

<%= link_to "New personal photo", new_personal_photo_path %>
